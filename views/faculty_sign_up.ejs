<link rel="stylesheet" href="/css/faculty_sign_up.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-2hQVF6OxvMADwG6BcU6O1q6DMZU6BzsUaHzcOgj0ah0xylp8OwjmYfnNUhs0lGgX9Fv2QWZ/5+xE/nRYsk7yMw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="formblocksignup">
  <div class="formareasignup">
    <form action="/users/create" method="post" id="form1">
      <div class="form-groupsignup">
        <label for="name"><i class="fas fa-user"></i> Name</label>
        <input type="text" name="name" id="name" placeholder="Name" required>
      </div>
      <div class="form-groupsignup">
        <label for="email"><i class="far fa-envelope"></i> Email</label>
        <input type="email" name="email" id="email" placeholder="Email" required>
      </div>
      <div class="form-groupsignup">
        <label for="password"><i class="fas fa-lock"></i> Password</label>
        <input type="password" name="password" id="password" placeholder="Password" required>
      </div>
      <div class="form-groupsignup">
        <label for="confirm_password"><i class="fas fa-lock"></i> Confirm Password</label>
        <input type="password" name="confirm_password" id="confirm_password"placeholder="Confirm Password" required>
      </div>
      <div class="form-groupsignup">
        <label for="role"><i class="fas fa-user-tie"></i> Role</label>
        <select name="role" id="role">
          <option value="faculty">Faculty</option>
          <option value="admin">Admin</option>
        </select>
      </div>
      <input type="submit" value="Signup" class="signup-btn">
      <h3>Already have an account? <a href="/users/sign-in" id="login-btn">Login</a></h3>
    </form>
  </div>
</div>
